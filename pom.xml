        <spring.cloud.version>Greenwich.SR1</spring.cloud.version>
        <spring.cloud.eureka.version>2.1.2.RELEASE</spring.cloud.eureka.version>

        <pagehelper-spring-boot-autoconfigure.version>1.2.3</pagehelper-spring-boot-autoconfigure.version>
        <pagehelper.version>5.1.2</pagehelper.version>
        <mybatis.spring.boot.starter.version>1.3.1</mybatis.spring.boot.starter.version>
        <druid.springboot.version>1.1.10</druid.springboot.version>

        <flyway.version>5.2.1</flyway.version>
        <com.univocity.version>1.5.1</com.univocity.version>
        <common.lang.version>3.7</common.lang.version>
        <commons.collections.version>3.2.2</commons.collections.version>
        <commons.beanutils.version>1.9.2</commons.beanutils.version>
        <hutool.version>4.5.10</hutool.version>
        <spring.session.version>1.3.2.RELEASE</spring.session.version>
        <spring.session.data.redis.version>2.0.1.RELEASE</spring.session.data.redis.version>
        <jedis.version>2.9.0</jedis.version>
        <jackson.databind.version>2.9.10.7</jackson.databind.version>
        <alibaba.fastjson.version>1.2.47</alibaba.fastjson.version>
